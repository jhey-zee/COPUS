                </div>
                <div class="fof">
                  <label>RE-TYPE NEW PASSWORD *</label>
                  <input type="password" placeholder="Confirm New Password">
                </div>
              </div>
        
              <!-- Right Column: Help Image -->
              <div class="help-img">
                <img src="https://cdn-icons-png.flaticon.com/512/3106/3106921.png" alt="Password Help">
              </div>
            </div>
        
            <button class="primary-btn">UPDATE PASSWORD</button>
          </form>
        </div>
        
      </div>
      
