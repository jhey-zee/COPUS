<div class="form-section">
  <h6 class="section-subtitle">PROFILE INFORMATION</h6>
  <hr>
  <form>
    <!-- Row 1 -->
    <div class="form-row">
      <div class="form-group">
        <label>FIRST NAME *</label>
        <input type="text" placeholder="First Name">
      </div>
      <div class="form-group">
        <label>LAST NAME *</label>
        <input type="text" placeholder="Last Name">
      </div>
      <div class="form-group">
        <label>MIDDLE INITIAL</label>
        <input type="text" placeholder="Middle Initial">
      </div>
    </div>

    <!-- Row 2 -->
    <div class="form-row">
      <div class="form-group">
        <label>PHINMA EMAIL *</label>
        <input type="email" placeholder="PHINMA Email">
      </div>
      <div class="form-group">
        <label>DEPARTMENT *</label>
        <input type="text" placeholder="Department">
      </div>
      <div class="form-group">
        <label>DEAN *</label>
        <input type="text" placeholder="Dean">
      </div>
    </div>

    <!-- Row 3 -->
    <div class="form-row">
      <div class="form-group">
        <label>ASSIGNED PROGRAM HEAD (IF APPLICABLE)</label>
        <input type="text" placeholder="Assigned Program Head">
      </div>
      <div class="form-group">
        <label>YEARS OF TEACHING EXPERIENCE IN PHINMA ED *</label>
        <input type="text" placeholder="Years of Teaching">
      </div>
    </div>

    <!-- Row 4 -->
    <div class="form-row">
      <div class="form-group">
        <label>YEAR HIRED *</label>
        <input type="text" placeholder="Year Hired">
      </div>
      <div class="form-group">
        <label>YEAR REGULARIZED *</label>
        <input type="text" placeholder="Year Regularized">
      </div>
      <div class="form-group">
        <label>HIGHEST EDUCATIONAL ATTAINMENT *</label>
        <input type="text" placeholder="Educational Attainment">
      </div>
    </div>

    <!-- Row 5 -->
    <div class="form-row">
      <div class="form-group">
        <label>PROFESSIONAL LICENSE *</label>
        <input type="text" placeholder="Professional License">
      </div>
      <div class="form-group">
        <label>EMPLOYMENT STATUS *</label>
        <input type="text" placeholder="Employment Status">
      </div>
      <div class="form-group">
        <label>RANK *</label>
        <input type="text" placeholder="Rank">
      </div>
    </div>

    <button class="primary-btn">UPDATE INFORMATION</button>
