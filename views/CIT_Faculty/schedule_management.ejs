                <tr>
                  <td><%= schedule.firstname %> <%= schedule.lastname %></td>
                  <td><%= schedule.department %></td>
                  <td><%= new Date(schedule.date).toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' }) %></td>
